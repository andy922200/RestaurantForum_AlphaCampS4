<!-- /views/editProfile.handlebars-->
<form action="/users/{{user.id}}?_method=PUT" method="POST" enctype="multipart/form-data">

  <div class="form-group">
    <label for="name">名稱</label>
    <input type="text" class="form-control" name="name" id="name" placeholder="請輸入名稱" value="{{user.name}}">
  </div>

  <div class="form-group">
    <label for="email">Email</label>
    <input type="text" class="form-control" name="email" id="email" placeholder="請輸入Email" value="{{user.email}}">
  </div>

  <div class="form-group">
    <label for="image">頭像</label>
    <input type="file" class="form-control-file" id="image" name="image">
  </div>

  <button type="submit" class="btn btn-primary">儲存</button>
</form>